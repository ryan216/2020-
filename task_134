//134
class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
        int remain = 0;
        int total= 0;
        int start = 0,i=0;
        for (i = 0; i < gas.length; i++) 
        {
            remain += gas[i] - cost[i];
            total += gas[i] - cost[i];
            if (remain < 0) {
                start = i + 1;
                remain = 0;
            }
        }
        if (total < 0) return -1;    // 说明怎么走都不可能跑一圈了
        return start;

    }
}
